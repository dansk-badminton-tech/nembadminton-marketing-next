---
import { Image } from 'astro:assets';
import heroImage from '../assets/teamfight-planning-landing-2.png';

const tagline = "Badminton holdturnering bare nemt. Planlæg, Sammensæt, Spil!";
const subtitle = "Optimer jeres holdturneringer med vores digitale løsninger. Gør planlægning, koordinering og gennemførelse til en leg, og lad teknologien løfte jeres klub til nye højder.";
---

<div class="bg-gray-50" id="home">
  <div class="relative isolate px-6 pt-24 lg:px-8">
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
      <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-500 to-indigo-600 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
    </div>
    <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          {tagline}
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          {subtitle}
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a href="https://app.nembadminton.dk/app/sign-up" target="_self" rel="noopener noreferrer" class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors">
            Kom igang
          </a>
          <a href="https://app.nembadminton.dk/app/home-redirect" target="_self" rel="noopener noreferrer" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">
            Gå til login <span aria-hidden="true">→</span>
          </a>
        </div>
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600 mb-3">
            Altid gratis • Ingen skjulte omkostninger • Fuld funktionalitet
          </p>
          <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 ring-1 ring-inset ring-green-600/20">
            <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L7.53 10.23a.75.75 0 00-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
            100% Gratis
          </span>
        </div>
      </div>
    </div>
    <div class="mx-auto max-w-6xl px-6 lg:px-8">
      <div class="mt-16 flow-root sm:mt-24">
        <div class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4">
          <Image 
            src={heroImage} 
            alt="Nembadminton team planning interface"
            class="rounded-md shadow-2xl ring-1 ring-gray-900/10"
            width={2432}
            height={1442}
          />
        </div>
      </div>
    </div>
    <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
      <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-blue-500 to-indigo-600 opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"></div>
    </div>
  </div>
</div>

 