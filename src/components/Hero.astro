---
import { Image } from 'astro:assets';
import heroImage from '../assets/teamfight-planning-landing-2.png';

const tagline = "Badminton holdturnering bare nemt. Planlæg, Sammensæt, Spil!";
const subtitle = "Optimer jeres holdturneringer med vores digitale løsninger. Gør planlægning, koordinering og gennemførelse til en leg, og lad teknologien løfte jeres klub til nye højder.";
---

<div class="bg-white" id="home">
	<div class="relative isolate px-6 pt-14 lg:px-8">
		    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
      <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-500 to-indigo-600 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
    </div>
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-2">
				<div class="max-w-xl lg:max-w-lg">
					<h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
						{tagline}
					</h1>
					<p class="mt-6 text-lg leading-8 text-gray-600">
						{subtitle}
					</p>
					          <div class="mt-10 flex items-center gap-x-6">
            <a href="#" class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors">
              Kom igang
            </a>
            <a href="#" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">
              Gå til login <span aria-hidden="true">→</span>
            </a>
          </div>
				</div>
				<div class="relative lg:max-w-none">
					<Image 
						src={heroImage} 
						alt="NemBadminton team planning interface"
						class="aspect-[6/5] w-full rounded-2xl bg-gray-50 object-cover lg:aspect-auto lg:h-[34.5rem]"
						width={600}
						height={550}
					/>
				</div>
			</div>
		</div>
		    <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
      <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-blue-500 to-indigo-600 opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"></div>
    </div>
	</div>
</div>

 