---
// Use the logo from public directory
---

<header class="bg-white fixed w-full top-0 z-50 shadow-sm">
	<nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
		<div class="flex lg:flex-1">
			<a href="#home" class="-m-1.5 p-1.5 flex items-center">
				<span class="sr-only">NemBadminton</span>
				<img class="h-8 w-auto" src="/logo.svg" alt="NemBadminton">
				<span class="ml-3 text-xl font-bold text-gray-900">Nembadminton</span>
			</a>
		</div>
		<div class="flex lg:hidden">
			<button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" onclick="toggleMobileMenu()">
				<span class="sr-only">Open main menu</span>
				<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</div>
		<div class="hidden lg:flex lg:gap-x-12">
			      <a href="#home" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">Hjem</a>
      <a href="#features" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">Features</a>
      <a href="#team" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">Om os</a>
      <a href="#faq" class="text-sm font-semibold leading-6 text-gray-900 hover:text-blue-600 transition-colors">FAQ</a>
		</div>
		<div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
			<a href="https://app.nembadminton.dk/app/sign-up" target="_blank" rel="noopener noreferrer" class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors">
				Kom igang
			</a>
			<a href="https://app.nembadminton.dk/app/home-redirect" target="_blank" rel="noopener noreferrer" class="rounded-md border border-gray-300 bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600 transition-colors">
				Login
			</a>
		</div>
	</nav>
	<!-- Mobile menu, show/hide based on menu open state. -->
	<div class="lg:hidden hidden" id="mobile-menu">
		<div class="fixed inset-0 z-50"></div>
		<div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
			<div class="flex items-center justify-between">
				<a href="#home" class="-m-1.5 p-1.5 flex items-center">
					<span class="sr-only">NemBadminton</span>
					<img class="h-8 w-auto" src="/logo.svg" alt="NemBadminton">
					<span class="ml-3 text-xl font-bold text-gray-900">Nembadminton</span>
				</a>
				<button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" onclick="toggleMobileMenu()">
					<span class="sr-only">Close menu</span>
					<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
			<div class="mt-6 flow-root">
				<div class="-my-6 divide-y divide-gray-500/10">
					<div class="space-y-2 py-6">
						<a href="#home" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" onclick="toggleMobileMenu()">Hjem</a>
						<a href="#features" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" onclick="toggleMobileMenu()">Features</a>
						<a href="#team" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" onclick="toggleMobileMenu()">Om os</a>
						<a href="#faq" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" onclick="toggleMobileMenu()">FAQ</a>
					</div>
					<div class="py-6 space-y-2">
						<a href="https://app.nembadminton.dk/app/sign-up" target="_blank" rel="noopener noreferrer" class="-mx-3 block rounded-lg bg-blue-600 px-3 py-2.5 text-base font-semibold leading-7 text-white hover:bg-blue-500 transition-colors text-center">
							Kom igang
						</a>
						<a href="https://app.nembadminton.dk/app/home-redirect" target="_blank" rel="noopener noreferrer" class="-mx-3 block rounded-lg border border-gray-300 bg-white px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50 transition-colors text-center">
							Login
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<script is:inline>
	function toggleMobileMenu() {
		const menu = document.getElementById('mobile-menu');
		if (menu) {
			menu.classList.toggle('hidden');
		}
	}
</script> 